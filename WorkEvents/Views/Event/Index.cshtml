<input type="text" id="txtUser" value="Marty" />
<input type="text" id="txtMessage" />
<button onclick="sendSync()">Send</button>


@section Scripts{
    <script type="text/javascript">

        function sendSync(){
            var data = {
                user: $('#txtUser').val(),
                message: $('#txtMessage').val()
            };

            $.ajax({
                url: '/event/AsyncEvent',
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    console.log('Ok');
                },
                error: function () {
                    alert("error");
                }
            });
        }

